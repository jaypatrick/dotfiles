#!/bin/bash
# Pre-commit hook to prevent common mistakes

# Colors
RED='\033[0;31m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check for trailing whitespace
if git diff --cached --check; then
    :
else
    echo -e "${RED}Error: Found trailing whitespace${NC}"
    echo "Fix it with: git diff --cached --check"
    exit 1
fi

# Check for debug statements in staged files
debug_patterns=(
    "console\.log"
    "debugger"
    "var_dump"
    "print_r"
    "dd\("
    "dump\("
    "binding\.pry"
    "pdb\.set_trace"
)

for pattern in "${debug_patterns[@]}"; do
    if git diff --cached --diff-filter=ACM | grep -E "$pattern" > /dev/null; then
        echo -e "${YELLOW}Warning: Found debug statement: $pattern${NC}"
        echo "Consider removing it before committing"
        # Uncomment the next line to make this a hard error
        # exit 1
    fi
done

# Check for files that shouldn't be committed
sensitive_files=(
    ".env"
    "*.pem"
    "*.key"
    "*_rsa"
    "*_dsa"
    "*.p12"
    "*.pfx"
    "credentials.json"
    "secrets.yml"
)

for file_pattern in "${sensitive_files[@]}"; do
    if git diff --cached --name-only | grep -E "$file_pattern" > /dev/null; then
        echo -e "${RED}Error: Attempting to commit sensitive file matching: $file_pattern${NC}"
        echo "This file should be added to .gitignore"
        exit 1
    fi
done

# Check for merge conflict markers
if git diff --cached | grep -E '^[<>|=]{7}' > /dev/null; then
    echo -e "${RED}Error: Found merge conflict markers${NC}"
    echo "Resolve conflicts before committing"
    exit 1
fi

# Run any language-specific checks
# Uncomment and customize as needed

# Python: Check for syntax errors
# if command -v python3 &> /dev/null; then
#     for file in $(git diff --cached --name-only --diff-filter=ACM | grep '\.py$'); do
#         python3 -m py_compile "$file" || exit 1
#     done
# fi

# JavaScript/TypeScript: Run linter if available
# if command -v eslint &> /dev/null; then
#     git diff --cached --name-only --diff-filter=ACM | grep -E '\.(js|jsx|ts|tsx)$' | xargs eslint || exit 1
# fi

# Shell scripts: Check syntax
for file in $(git diff --cached --name-only --diff-filter=ACM | grep -E '\.sh$'); do
    if [ -f "$file" ]; then
        bash -n "$file" || {
            echo -e "${RED}Error: Syntax error in $file${NC}"
            exit 1
        }
    fi
done

echo -e "${NC}Pre-commit checks passed!${NC}"
exit 0
